<%- include('../templates/h'); %>
<%- include('../templates/n'); %>
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">User</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">List Data User</h6>
            <div class="dropdown no-arrow">
                <a class="btn btn-primary" href="/users/add">
                    <i class="fas fa-plus fa-sm fa-fw text-gray-400"></i> Tambah Data
                </a>
            </div>
        </div>
        <div class="card-body">
            <%if (messages.info) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= messages.info %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% } %>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>Username</th>
                            <th>Level</th>
                            <th class="text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var number = 1; %>
                        <% datauser.forEach(function(row) { %>
                            <tr>
                                <td><%= number %></td>
                                <td><%= row.nama %></td>
                                <td><%= row.username %></td>
                                <td><%= row.level %></td>
                                <td class="text-center">
                                    <a href="/users/<%= row.id %>/edit" class="btn btn-sm btn-success"><i class="fa fa-wrench"></i></a>
                                    <a href="/users/<%= row.id %>/hapus" onclick="return confirm('Hapus Data ?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        <%  number++; %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<%- include('../templates/f'); %>